{{#partial "content"}}
    <style>
        form{
        top:50%;
        color:black;
        }
        body{
        padding-top: 5%;
          background-image:linear-gradient(
               rgba(0, 0, 0, 1.5), rgba(0, 0, 0, 1.5)),
               url("./images/img1.png");
        }
    </style><br><br>
    <h2>Add Animal</h2><hr>
    <div class="row">
        <div class="col col-sm-6 form-left">
            <br/>
            <form action="/new-animals" method="post" >
                <div class="form-group">
                    <label for="animalName">Animal name</label><br>
                    <input class="form-control" type="text" id="animalName" name="animalName" placeholder="Animal Name"/>
                </div>

                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="endangered" value="yes">
                    <label class="form-check-label" for="endangered">Endangered Species</label>
                </div>

                <div class="form-group">
                    <label for="health">Health</label><br>
                    <select class="mdb-select md-form" name="health" STYLE="width:100%;height:40px;border-radius:4px">
                        <option value="" disabled selected>Health Condition</option>
                        <option value="Healthy">Healthy</option>
                        <option value="Okay">Okay</option>
                        <option value="Ill">Ill</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="age"> Age </label><br>
                    <select class="mdb-select md-form" name="age" STYLE="width:100%;height:40px;border-radius:4px"><br>
                        <option value="" disabled selected>Age</option>
                        <option value="Newborn">Newborn</option>
                        <option value="Young">Young</option>
                        <option value="Adult">Adult</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Add Animal</button>
            </form>
        </div>
    </div>
{{/partial}}

{{>layout.hbs}}
